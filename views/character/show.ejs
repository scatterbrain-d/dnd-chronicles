<% include ../partials/header %>
    <div class="container">
        <div class="profile-backdrop flex-container">
            <div class="session">
                <h3 class="title"><%= character.name %></h3>
                <img class="pull-right profile-pic" src="<%= character.image %>">
                <p>Race: <%= character.race %></p>
                <p>Class: <%= character.gameClass %></p>
                <p>Likes: <%- character.likes %></p>
                <p>Dislikes: <%- character.dislikes %></p>
                <form class="form-inline" action="/characters/<%= character._id %>?_method=DELETE" method="POST">
                    <a class="btn btn-info" href="/characters/<%= character._id %>/edit">Edit</a>
                    <button class="btn btn-primary">Delete</button>
                </form>
            </div>
        </div>
    </div>        

<% include ../partials/footer %>