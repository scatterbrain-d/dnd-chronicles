<% include ../partials/header %>
    
    <!--********** CHARACTER NEW **********-->
    <!-- No data passed through the NEW route -->
    
    <div class="newform">
        
        <h2>Add New Character</h2>
        
        <div class="backdrop">
            <form class="session" action="/characters" method="POST">
                
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" type="text" placeholder="name" name="character[name]">
                </div>
            
                <div class="form-group">
                    <label>Race</label>
                    <input class="form-control" type="text" placeholder="race" name="character[race]">
                </div>
            
                <div class="form-group">
                    <label>Class</label>
                    <input class="form-control" type="text" placeholder="class" name="character[gameClass]">
                </div>
            
                <div class="form-group">
                    <label>Unique Skill</label>
                    <input class="form-control" type="text" placeholder="skill" name="character[skill]">
                </div>
            
                <div class="form-group">
                    <label>Image URL</label>
                    <input class="form-control" type="text" placeholder="image" name="character[image]">
                </div>
            
                <div class="form-group">
                    <label>Likes</label>
                    <input class="form-control" type="text" placeholder="likes" name="character[likes]">
                </div>
            
                <div class="form-group">
                    <label>Dislikes</label>
                    <input class="form-control" type="text" placeholder="dislikes" name="character[dislikes]">
                </div>
                
                <!-- This button cancels character creation and returns to INDEX -->
                <button class="deleteButton" href="/characters">Go Back</button>
                
                <!-- This button creates new character data via the Character CREATE route -->
                <button class="pull-right editButton" type="Submit">Submit</button>
            
            </form>
        </div>
    </div>        
<% include ../partials/footer %>