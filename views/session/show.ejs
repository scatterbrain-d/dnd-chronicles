<% include ../partials/header %>

    <div class="container">
        <div class="backdrop">
            <div class="session">
                <div class="title">
                    <h2><%= session.title %></h2>
                    <p>DM: <%= session.dm %></p>
                    <p>Party Members: |
                        <% var party = session.characters; %>
                        <% party.forEach(function(character){ %>    
                            <a href="/characters/<%= character._id %>" ><%= character.name %></a> <span> | </span>
                        <% }) %>
                    </p>
                    <hr>
                </div>
                <p><%- session.content %></p>
                <div>
                    <a href="/sessions/<%= session._id %>/edit"><button class="btn btn-info">Edit</button></a>
                    <form class="pull-right" action="/sessions/<%= session._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-primary">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

<% include ../partials/footer %>