<% include ../partials/header %>

<div>
    <div class="backdrop chapters">           
        <ul>
            <% sessions.forEach(function(entry, i){ %>
                <li><a href="#<%= entry._id %>"><strong><%=i +1%>. <%= entry.title %></strong></a></li>
                <hr>
            <% }) %>
        </ul>
    </div> 
        
    <div class="backdrop content">
        <% sessions.forEach(function(entry){ %>
        <div class="session">
            <h2 class="title"><a name="<%= entry._id %>"></a><%= entry.title %></h2>
            <p><%- entry.content.substring(0, 500)%>...   <a href="/sessions/<%= entry._id %>">Read More</a></p>
            <hr>
        <% }); %>
    </div>
</div>
        
<% include ../partials/footer %>